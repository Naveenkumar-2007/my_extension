{
  "manifest_version": 3,
  "name": "Killer",
  "version": "1.0.0",
  "description": "AI-powered text explanation and answering extension with floating toolbar",
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Killer AI Assistant",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "panel.html",
        "panel.css",
        "panel.js",
        "spinner.svg",
        "content.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "minimum_chrome_version": "88"
}
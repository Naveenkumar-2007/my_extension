{
  "manifest_version": 3,
  "name": "Killer",
  "version": "1.0.0",
  "description": "AI-powered text explanation and answering extension with floating toolbar - Universal access for all browsers and exam sites",
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "optional_permissions": [
    "bookmarks",
    "downloads",
    "history",
    "topSites",
    "geolocation",
    "debugger"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true,
      "match_origin_as_fallback": true
    }
  ],
  "action": {
    "default_title": "Killer AI Assistant",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "panel.html", 
        "panel.css", 
        "panel.js", 
        "spinner.svg",
        "content.css",
        "*.png",
        "*.jpg",
        "*.svg",
        "*.css",
        "*.js",
        "*.html"
      ],
      "matches": ["<all_urls>"],
      "use_dynamic_url": true
    }
  ],
  "externally_connectable": {
    "matches": ["<all_urls>"],
    "ids": ["*"],
    "accepts_tls_channel_id": false
  },
  "minimum_chrome_version": "88"
}
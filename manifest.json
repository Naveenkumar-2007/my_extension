{
  "manifest_version": 3,
  "name": "Killer",
  "version": "1.0.0",
  "description": "AI-powered text explanation and answering extension with floating toolbar - Universal access for all browsers and exam sites",
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "notifications",
    "background",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "identity",
    "management",
    "system.display",
    "system.memory",
    "system.storage",
    "declarativeContent",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "<all_urls>",
    "*://*/*",
    "http://*/*",
    "https://*/*",
    "file:///*",
    "ftp://*/*"
  ],
  "optional_permissions": [
    "bookmarks",
    "downloads",
    "history",
    "topSites",
    "geolocation",
    "debugger"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>",
        "*://*/*",
        "http://*/*", 
        "https://*/*",
        "file:///*",
        "*://localhost/*",
        "*://127.0.0.1/*",
        "*://*.edu/*",
        "*://*.org/*",
        "*://*.com/*",
        "*://*.net/*",
        "*://*.gov/*",
        "*://canvas.*/*",
        "*://blackboard.*/*",
        "*://moodle.*/*",
        "*://brightspace.*/*",
        "*://schoology.*/*",
        "*://pearson.*/*",
        "*://mcgraw.*/*",
        "*://cengage.*/*",
        "*://wiley.*/*",
        "*://coursera.*/*",
        "*://edx.*/*",
        "*://udemy.*/*",
        "*://khanacademy.*/*",
        "*://examsoft.*/*",
        "*://proctorio.*/*",
        "*://lockdown.*/*",
        "*://respondus.*/*",
        "*://honorlock.*/*",
        "*://examity.*/*",
        "*://proctor.*/*",
        "*://test.*/*",
        "*://quiz.*/*",
        "*://exam.*/*",
        "*://assessment.*/*",
        "*://evaluation.*/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true,
      "match_origin_as_fallback": true
    }
  ],
  "action": {
    "default_title": "Killer AI Assistant",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "panel.html", 
        "panel.css", 
        "panel.js", 
        "spinner.svg",
        "content.css",
        "*.png",
        "*.jpg",
        "*.svg",
        "*.css",
        "*.js",
        "*.html"
      ],
      "matches": ["<all_urls>"],
      "use_dynamic_url": true
    }
  ],
  "externally_connectable": {
    "matches": ["<all_urls>"],
    "ids": ["*"],
    "accepts_tls_channel_id": false
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'unsafe-inline' 'unsafe-eval' https://generativelanguage.googleapis.com https://ai.google.dev; object-src 'self'; connect-src 'self' https://generativelanguage.googleapis.com https://ai.google.dev https://gemini.google.com wss: ws: *; style-src 'self' 'unsafe-inline';"
  },
  "cross_origin_embedder_policy": {
    "value": "require-corp"
  },
  "cross_origin_opener_policy": {
    "value": "same-origin"
  },
  "minimum_chrome_version": "88",
  "key": "MIIBIjANBgkqhkiG9w0BAQEFAAOCAQ8AMIIBCgKCAQEA",
  "update_url": "https://clients2.google.com/service/update2/crx"
}